<br>
<br>

<!-- EGG INVENTORY -->
  <div class="container white z-depth-1">
    <div class="center-align">
      <div class="row">
        <div class="col s12 orange z-depth-1">
          <span class="whiteit-title">Eggs Currently In Inventory</span>
        </div>
      </div>
    </div>
    <div class="inventory-box">
      <div class="col 12">
        <div class="row">
          <table class="bordered responsive">
            <thead>
              <tr>
                <th>Date</th>
                <th>Egg Variety</th>
                <th>Quantity</th>
                <th>Add</th>
                <th>Subtract</th>
                <th>Remove Line</th>
              </tr>
            </thead>

            <tbody><% @egg.each do |egg| %>
              <tr>

                <td><%= egg.color %></td>
                <td><%= Egg.where(color: egg.id).count %></td>

                <!-- ADD EGG BUTTON -->
                <td><button class="btn light-blue">
                  <%= link_to '+1', edit_egg_path(egg) %></button></td>

                <!-- SUBTRACT EGG BUTTON -->
                <td><button class="btn orange darken-2">
                  <%= link_to '-1', edit_egg_path(egg) %></button></td>

                <!-- REMOVE ENTRY BUTTON -->
                <td><button class="btn red">
                  <%= link_to 'Remove Eggs', egg, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>

              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="container white z-depth-1">
  <div class="center-align">
    <div class="row">
      <div class="col s12 light-blue z-depth-1">
        <span class="whiteit-title">Enter Income</span>
      </div>
    </div>
  </div>
  <br>

  <!-- laid by column -->
    <div class="container">
      <div class="row">
        <div class="make-invisible col s2">.</div>
          <div class="col s5">
            <span class="blackit-sub">Laid By</span>
              <form action="/incomes" method="post">

                <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <input id="chicken" name="egg[animal_id]" type="radio" value="1" />
                  <label for="chicken">Chicken</label>
                </p>
                <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <input id="duck" name="egg[animal_id]" type="radio" value="2" />
                  <label for="duck">Duck</label>
                </p>
                <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <input id="goose" name="egg[animal_id]" type="radio" value="3" />
                  <label for="goose">Goose</label>
                </p>
                <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <input id="turkey" name="egg[animal_id]" type="radio" value="4" />
                  <label for="turkey">Turkey</label>
                </p>
                <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <input id="guinea" name="egg[animal_id]" type="radio" value="5" />
                  <label for="guinea">Guinea Hen</label>
                </p>
        </div>

        <!-- egg color column -->
        <div class="col s5">
          <span class="blackit-sub">Egg Color</span>

            <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input id="brown" name="egg[color]" type="radio" value="brown" />
                  <label for="brown">Brown</label></p>

            <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input id="white" name="egg[color]" type="radio" value="white" />
                  <label for="white">White</label></p>

            <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input id="blue" name="egg[color]" type="radio" value="blue" />
                  <label for="blue">Blue</label></p>

            <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input id="dark_brown" name="egg[color]" type="radio" value="dark_brown" />
                  <label for="dark_brown">Dark Brown</label></p>

            <p><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input id="speckled" name="egg[color]" type="radio" value="speckled" />
                  <label for="speckled">Speckled</label></p>
        </div>
      </div>
      <div class="row">
        <div class="centerize-field">
          <div class="input-field col s12">
            <input id="quantity" type="number" class="validate">
            <label for="quantity">Quantity</label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="centerize-field">
          <div class="input-field col s12">
            <input id="incomes" type="number" class="validate">
            <label for="incomes">$ Amount</label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="centerize-field">
          <div class="input-field col s12">
            <button class="btn waves-effect light-blue validate" type="submit" name="action">Submit</button>
          </div>
        </div>
      </div>
    </form>
    <br>
    <br>

      </div>
      </div>
    </div>
    </div>

    <br>
    <br>

      <!-- past incomes table -->
    <div class="container white z-depth-1">
    <div class="center-align">
      <div class="row">
      <div class="col s12 light-blue z-depth-1">
        <span class="whiteit-title">Past Income Transactions</span>
      </div>
      </div>
    <div class="container">
      <table class="bordered responsive">
        <thead>
          <tr>
            <th>Date</th>
            <th>Laid By</th>
            <th>Egg Color</th>
            <th>Number Sold</th>
            <th>Income Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @incomes.each do |income| %>
            <tr>
              <td><%= income.created_at %></td>
              <td><%= animal.name %></td>
              <td><%= eggs.color_id %></td>
              <td><%= income.quantity_sold %></td>
              <td><%= income.amount %></td>
              <td><%= link_to 'Edit', edit_income_path(income) %></td>
              <td><%= link_to 'Remove', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    </div>
    </div>

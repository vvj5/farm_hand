<div class="container white z-depth-1">
<div class="center-align">

  <div class="row">
  <div class="col s12 red z-depth-1">
    <h4><span class="bolder"><span class="whiteit">Past Expense Transactions</span></span></h4>
  </div>
  </div>
<div class="container">

  <table class="bordered hoverable responsive">
    <thead>
      <tr>
        <th>Date</th>
        <th>Item</th>
        <th>Expense Amount</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.created_at %></td>
          <td><%= expense.title %></td>
          <td><%= expense.amount %></td>
          <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
          <td><%= link_to 'Remove', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <%= link_to 'New Expense', new_expense_path %>
    </div>
    </div>
    </div>

